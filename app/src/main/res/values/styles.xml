<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="StoryToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="HomeToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer_icon</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Toolbar_titleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_family_galano_regular</item>
    </style>

    <style name="button_primary_blue_filled" parent="Widget.AppCompat.Button">

        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="fontFamily">@font/font_family_galano_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">26sp</item>
        <item name="firstBaselineToTopHeight">33sp</item>
        <item name="lastBaselineToBottomHeight">21sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:radius">5dp</item>
        <item name="android:background">@color/button_bgd</item>
        <item name="backgroundTint">@color/button_bgd</item>
        <item name="android:backgroundTint">@color/button_bgd</item>

    </style>

    <style name="buttonStyleSmall" parent="Widget.AppCompat.Button">
        <!-- Customizations  -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@color/white</item>
    </style>




</resources>