<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/drawerToolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/button_bgd"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp10"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="@dimen/sp20"
        android:fontFamily="@font/font_family_galano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivDrawerStorilyLogo"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@color/purple_light"
        android:padding="@dimen/dp10"
        android:src="@drawable/story_logo_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawerToolBar" />


</androidx.constraintlayout.widget.ConstraintLayout>